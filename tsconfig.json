{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./packages",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      
      "baseUrl": "./",
      "paths": {
        "./shared/*": ["@packages/shared/src/*"]
      }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  